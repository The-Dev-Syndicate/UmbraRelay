# UmbraRelay Configuration Example
# 
# Default location: ~/.config/umbrarelay/config.toml
# 
# To use a custom location, set the UMBRARELAY_CONFIG_PATH environment variable:
#   export UMBRARELAY_CONFIG_PATH="$HOME/.config/umbrarelay/config.toml"
#   # or
#   export UMBRARELAY_CONFIG_PATH="/path/to/my/config.toml"
# 
# The path supports ~ expansion for your home directory.

[github]
poll_interval = "5m"

[[github.repos]]
owner = "dev-syndicate"
repo = "UmbraRelay"
assigned_only = true

[[rss]]
name = "Hacker News"
url = "https://news.ycombinator.com/rss"
poll_interval = "10m"

[[rss]]
name = "Lobsters"
url = "https://lobste.rs/rss"
poll_interval = "15m"

